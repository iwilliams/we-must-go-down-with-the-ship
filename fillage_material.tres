[sub_resource type="Shader" id=12]
code = "shader_type canvas_item;


uniform sampler2D ship_mask;
uniform vec2 screen_size;
uniform vec2 boat_bounds;
uniform float fillage: hint_range(0.0, 1.0) = 0.0;

void fragment() {
    vec4 ship_mask_sample = texture(ship_mask, UV * vec2(1, -1) + vec2(0, 1));
    vec2 boat_uv = boat_bounds * 16.0 / screen_size.y;
    if (UV.y > boat_uv.x && UV.y < boat_uv.y && smoothstep(boat_uv.x, boat_uv.y, UV.y) > 1.0 - fillage) {
        COLOR.a = ship_mask_sample.a;
    } else {
        COLOR.a = 0.0;
    }
}"

